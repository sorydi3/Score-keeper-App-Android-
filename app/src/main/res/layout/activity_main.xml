<?xml version="1.0" encoding="utf-8"?>
            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/activity_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context="com.example.android.curtcounter.MainActivity"
               >
          <FrameLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/background">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
               >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="sans-serif-light"
                        android:shadowColor="#000000"
                        android:shadowDx="10"
                        android:shadowDy="20"
                        android:shadowRadius="30"
                        android:text="Team A" />

                    <TextView
                        android:id="@+id/team_a_score"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="100sp"
                        android:layout_marginBottom="24dp"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif-light"
                        android:shadowColor="#000000"
                        android:shadowDx="10"
                        android:shadowDy="20"
                        android:shadowRadius="30"
                        android:padding="4dp"
                        android:text="0" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="24dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/btn_circle_pressed"
                        android:shadowColor="#000000"
                        android:shadowDx="10"
                        android:shadowDy="20"
                        android:shadowRadius="30"
                        android:textColor="#ffffff"
                        android:textSize="32sp"
                        android:alpha="0.60"
                        android:onClick="point1"
                        android:text="1pt" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/btn_circle_pressed"
                        android:shadowColor="#000000"
                        android:shadowDx="10"
                        android:shadowDy="20"
                        android:shadowRadius="30"
                        android:textColor="#ffffff"
                        android:textSize="32sp"
                        android:alpha="0.60"
                        android:onClick="point2"
                        android:text="2pt" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="24dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/btn_circle_pressed"
                        android:shadowColor="#000000"
                        android:shadowDx="10"
                        android:shadowDy="20"
                        android:shadowRadius="30"
                        android:textColor="#ffffff"
                        android:textSize="32sp"
                        android:alpha="0.60"
                        android:onClick="point3"
                        android:layout_marginBottom="16dp"
                        android:text="3pt" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif-light"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:shadowColor="#000000"
                        android:shadowDx="10"
                        android:shadowDy="20"
                        android:shadowRadius="30"
                        android:text="Team B" />

                    <TextView
                        android:id="@+id/team_b_score"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="100sp"
                        android:layout_marginBottom="24dp"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif-light"
                        android:shadowColor="#000000"
                        android:shadowDx="10"
                        android:shadowDy="20"
                        android:shadowRadius="30"
                        android:padding="4dp"
                        android:text="0" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="24dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginBottom="4dp"
                        android:onClick="point1b"
                        android:text="2pt"
                        android:background="@drawable/btn_circle_pressed"
                        android:shadowColor="#000000"
                        android:shadowDx="10"
                        android:shadowDy="20"
                        android:shadowRadius="30"
                        android:textColor="#ffffff"
                        android:textSize="32sp"
                        android:alpha="0.60"
                        android:elevation="0dp" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/btn_circle_pressed"
                        android:shadowColor="#000000"
                        android:shadowDx="10"
                        android:shadowDy="20"
                        android:shadowRadius="30"
                        android:textColor="#ffffff"
                        android:onClick="point2b"
                        android:textSize="32sp"
                        android:alpha="0.60"
                        android:text="2pt" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="32sp"
                        android:layout_marginRight="24dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/btn_circle_pressed"
                        android:shadowColor="#000000"
                        android:shadowDx="10"
                        android:shadowDy="20"
                        android:shadowRadius="30"
                        android:textColor="#ffffff"
                        android:alpha="0.60"
                        android:onClick="point3b"
                        android:layout_marginBottom="16dp"
                        android:text="3pt" />
                </LinearLayout>
            </LinearLayout>
          </FrameLayout>

            <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESET/ibra"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="320dp"
                android:textColor="#ffffff"
                android:alpha="0.70"
            android:onClick="reset"
                />
                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:shadowColor="#000000"
                    android:shadowDx="10"
                    android:shadowDy="20"
                    android:shadowRadius="30"
                    android:textColor="#ffffff"
                    android:orientation="vertical">
               <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="200dp"
                android:layout_marginBottom="16dp"
                android:background="@android:color/darker_gray"
               />
            </LinearLayout>
            </RelativeLayout>
